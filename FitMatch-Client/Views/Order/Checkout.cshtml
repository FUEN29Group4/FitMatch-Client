<script>const app = Vue.createApp({
        data() {
            return {
                gyms: [],
                searchKey: "",
            };
        },
        mounted() {
            this.fetchGyms();
        },
        methods: {
            fetchGyms() {
                fetch("https://localhost:7011/api/Gym")
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("API 請求失敗 " + response);
                        }
                        return response.json();
                    })
                    .then((data) => {
                        this.gyms = data;
                    })
                    .catch((error) => {
                        console.error("API 請求失敗: " + error.message);
                    });
            },
            searchGym(event) {
                this.searchKey = event.target.value;
                fetch(`https://localhost:7011/api/Gym/search?gymName=${this.searchKey}`)
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("API 請求失敗 " + response);
                        }
                        return response.json();
                    })
                    .then((data) => {
                        this.gyms = data;
                    })
                    .catch((error) => {
                        console.error("API 請求失敗: " + error.message);
                    });
            }
        },
    }).mount('#app');</script>




