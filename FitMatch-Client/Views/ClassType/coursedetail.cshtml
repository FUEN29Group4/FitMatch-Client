<script>
    const urlParams = new URLSearchParams(window.location.search);
    const classtypeId = urlParams.get('classtypeId');

    const app4 = Vue.createApp({
        data() {
            return {
                classtype: null // 这里将classtype作为一个对象，而不是数组
            };
        },
        mounted() {
            this.fetchClassTypeDetail();
        },
        methods: {
            async fetchClassTypeDetail() {
                try {
                    const response = await fetch(`https://localhost:7011/api/ClassType/detail/` + classtypeId);
                    const data = await response.json();
                    console.log(data);

                    this.classtype = data; // 将返回的数据赋值给classtype
                } catch (error) {
                    console.error('Error:', error);
                }
            }
        }
    }).mount("#classTypeDetail"); // 这里更改为新的挂载点
</script>
