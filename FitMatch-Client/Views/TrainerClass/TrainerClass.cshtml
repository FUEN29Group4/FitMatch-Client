<script>
// 将calendar声明为全局变量
var calendar;

// 定义 loadEvents 函数
function loadEvents() {
    // 使用提供的GET URL获取数据
    // 从URL获取的Trainer的ID
    var urlParams = new URLSearchParams(window.location.search);
    var trainerId = urlParams.get("id");

    // 确保 trainerId 存在
    if (!trainerId) {
        console.error('TrainerId is missing from the URL');
        return;
    }

    fetch("https://localhost:7011/api/TrainerClass/" + trainerId)
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            // 打印API返回的数据
            console.log("API Response:", data);

            if (data && Array.isArray(data)) {
                data.forEach(eventData => {
                    calendar.addEvent({
                        title: eventData.gymName, 
                        start: new Date(eventData.startTime),
                        end: new Date(eventData.endTime),
                        extendedProps: {
                            memberName: eventData.memberName,
                            className: eventData.className,
                            gymName: eventData.gymName
                        }
                    });
                });
            }
        })
        .catch(error => {
            console.error('Error loading events:', error);
            alert('加载预约数据时发生错误，请刷新页面重试。');
        });
}

function openVenueModal(date) {
    // 创建弹出窗口的 HTML
    var modalHTML = '<div id="venueModal" class="modal">';
    modalHTML += '<div class="modal-content">';
    modalHTML += '<span class="close">&times;</span>';
    modalHTML += '<h2>新增场馆</h2>';
    modalHTML += '<div>Date: <input type="text" id="datePicker" value="' + date.toISOString().slice(0, 10) + '" readonly></div>';
    modalHTML += '<input type="text" id="venueName" placeholder="场馆名称">';
    modalHTML += '<button id="addVenueButton">添加场馆</button>';
    modalHTML += '</div></div>';

    // 添加弹出窗口 HTML 到页面中
    document.body.insertAdjacentHTML('beforeend', modalHTML);

    // 获取弹出窗口元素和关闭按钮
    var modal = document.getElementById('venueModal');
    var closeButton = document.querySelector('.close');

    // 当点击关闭按钮或者模态窗口以外的区域时，关闭弹出窗口
    closeButton.addEventListener('click', function () {
        modal.style.display = 'none';
    });

    window.addEventListener('click', function (event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    });

    // 当点击添加场馆按钮时，获取日期、场馆名称并添加事件到日历
    var addVenueButton = document.getElementById('addVenueButton');
    addVenueButton.addEventListener('click', function () {
        var selectedDate = new Date(document.getElementById('datePicker').value);
        var venueName = document.getElementById('venueName').value;

        if (selectedDate && venueName) {
            var event = {
                title: '课程',
                start: selectedDate,
                extendedProps: {
                    venue: venueName
                }
            };

            calendar.addEvent(event);
            modal.style.display = 'none';
            alert('课程已创建：' + selectedDate.toLocaleDateString() + ' - ' + venueName);
        } else {
            alert('请输入有效的日期和场馆名称。');
        }
    });

    // 显示弹出窗口
    modal.style.display = 'block';
}

document.addEventListener('DOMContentLoaded', function () {
    var calendarEl = document.getElementById('calendar');
    calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'timeGridWeek',
        allDayText: '场馆',
        dayHeaderContent: function (headerInfo) {
            var btn = document.createElement('button');
            btn.innerText = '新增课程';
            btn.addEventListener('click', function () {
                openVenueModal(headerInfo.date);
            });
            return { domNodes: [btn] };
        },
        slotLabelFormat: {
            hour: 'numeric',
            minute: '2-digit',
            omitZeroMinute: false,
            hour12: false
        },
        eventContent: function (arg) {
            return {
                html: '<b>' + arg.timeText + '</b><br>' + arg.event.extendedProps.gymName
            };
        }
    });

    calendar.render();

    // 在页面加载时调用loadEvents
    loadEvents();
});

</script>

