<script>
    // 取得儲存的 token
    const token = sessionStorage.getItem('token');

    if (token) {
        // 如果有 token, 用它來請求用戶資訊
        fetch('https://localhost:7011/api/Login/getUserInfo', { // 更新這裡的 URL
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
            .then(response => {
                if (response.status === 200) {
                    return response.json();
                } else if (response.status === 401) {
                    throw new Error('Unauthorized');
                } else if (response.status === 404) {
                    throw new Error('Not Found');
                } else {
                    throw new Error('Failed to fetch user info');
                }
            })
            .then(data => {
                // 這裡假設 data 是一個包含用戶資訊的 JSON 物件
                // 更新前端界面
                if (data.MemberName) {
                    document.getElementById('userName').textContent = data.MemberName;
                }
                if (data.TrainerName) {
                    document.getElementById('userName').textContent = data.TrainerName;
                }
                if (data.Email) {
                    document.getElementById('userEmail').textContent = data.Email;
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    } else {
        // 如果沒有 token，可能需要導向登入頁面
        console.log('No token found. User is not logged in.');
    }

</script>