
@{
    Layout = null;
    ViewData["Title"] = "SignUp";
}


<link href="/css/bootstrap.min.css" rel="stylesheet">




<!-- Sign Up Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="width: 600px;">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="index.html" class="">
                        <div class="mb-3" style="transform: scale(0.9);">
                            <img src="./images/LOGO/Logo.png" alt="">
                        </div>
                    </a>
                    <h3>註冊</h3>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control col-original" id="floatingText" placeholder="jhondoe">
                    <label for="floatingText" style="color: #a5a5a5;">姓名</label>
                </div>
                <div class="mb-3" style="margin-right: 20px;">
                    <input type="radio" text id="male" name="fav_language" value="男">
                    <label style="margin-right: 30px;color: white;" for="male">男</label>
                    <input type="radio" id="female" name="fav_language" value="女">
                    <label for="female" style="color: white;">女</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control col-original" id="floatingText" placeholder="jhondoe">
                    <label for="floatingText" style="color: #a5a5a5;">生日</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control col-original" id="floatingText" placeholder="jhondoe">
                    <label for="floatingText" style="color: #a5a5a5;">電話</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control col-original" id="floatingText" placeholder="jhondoe">
                    <label for="floatingText" style="color: #a5a5a5;">地址</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control col-original" id="floatingInput"
                           placeholder="name@example.com">
                    <label for="floatingInput" style="color: #a5a5a5;">Email</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control col-original" id="floatingPassword"
                           placeholder="Password">
                    <label for="floatingPassword" style="color: #a5a5a5;">密碼</label>
                </div>
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4 mt-3"
                        style="background-color: #F24B88; color: white;">
                    註冊
                </button>
                <p class="text-center mb-0" style="color: #a5a5a5;">
                    我已經是會員 <a asp-controller="Login" asp-action="Login"
                              class="text-light">登入</a>
                </p>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->
