        // 我要預約按鈕
        function initShowButton() {
            const showButton = document.getElementById("showButton");
            const weeklycalendar = document.getElementById("hiddencalendar");
            const gogoBlock = document.getElementById("gogo");

            showButton.addEventListener("click", () => {
                if (weeklycalendar.style.display === "none") {
                    weeklycalendar.style.display = "block";
                    if (calendarInstance) {
                        calendarInstance.render();  // Re-render the calendar
                    }
                    gogoBlock.scrollIntoView({ behavior: "smooth", block: "start" });
                } else {
                    weeklycalendar.style.display = "none";
                    gogoBlock.scrollIntoView({ behavior: "smooth", block: "end" });
                }
            });
        }
        // 週曆
        function initCalendar() {
            const calendarEl = document.getElementById('calendar');
            calendarInstance = new FullCalendar.Calendar(calendarEl, {
                // 設定初始視圖為週視圖
                initialView: 'timeGridWeek',
                selectable: true,
                allDaySlot: false,
                // 設定語言
                locale: 'zh-tw',
                // 設定時間範圍，早上9點到晚上10點
                slotMinTime: '09:00:00',
                slotMaxTime: '22:00:00',
                slotDuration: '01:00:00',  // 這裡設定每個時間格為一小時
                height: 760,
                titleFormat: { year: 'numeric' },  // 只顯示年分
                // 顯示上一週、下一週和今天按鈕
                headerToolbar: {
                    left: 'prev',
                    center: 'title',
                    right: 'next today'
                },
