<script>
    const app = Vue.createApp({
        data() {
            return {
                Member: {}, // 存储单一数据的对象
            };
        },
        mounted() {
            // 在组件加载后调用方法来获取单一数据
            this.fetchMember();
        },
        methods: {
            async fetchMember() {
                try {
                    // 获取URL中的ID参数
                    const urlParams = new URLSearchParams(window.location.search);
                    const memberId = urlParams.get('id');

                    // 发起GET请求获取特定ID的数据
                    const response = await axios.get(`https://localhost:7011/api/Member/` + memberId);

                    // 将获取的数据存储到Vue实例的数据属性中
                    this.Member = response.data;
                    console.log(response)
                } catch (error) {
                    console.error('获取数据时出现错误：', error);
                }
            },
        }
    }).mount('#app');




</script>

