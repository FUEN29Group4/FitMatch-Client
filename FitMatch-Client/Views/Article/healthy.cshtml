<script>
    

    const app = Vue.createApp({
        data() {
            return {
                articles: []
            };
        },
        mounted() {
            this.fetcharticle();
        },

        methods: {
            async fetcharticle() {
                try {
                    const response = await fetch(`https://localhost:7011/api/Article/healthy`);
                    const data = await response.json();
                    this.articles = data.slice(0, 16);
                } catch (error) {
                    console.error('Error:', error);
                }
            },
        },
    }).mount("#app");

   
</script>
